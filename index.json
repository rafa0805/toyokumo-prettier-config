{
  "printWidth": 120,
  "overrides": [
    {
      "files": ["*.js", "*.jsx", "*.ts", "*.tsx", "*.vue"],
      "options": {
        "trailingComma": "all",
        "singleQuote": true
      }
    },
    {
      "files": ["*.php"],
      "options": {
        "singleQuote": true
      }
    },
    {
      "files": ["*.graphql"],
      "options": {
        "tabWidth": 4
      }
    }
  ]
}
